<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slt_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_tab_space_equal="true"
        android:orientation="vertical"
        app:tl_indicator_color="#FF6E6C"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="10dp"
        app:tl_textSelectColor="#FF6E6C"
        app:tl_textSelectSize="15sp"
        app:tl_textUnSelectSize="15sp"
        app:tl_textUnselectColor="#999999"
        app:tl_underline_color="#17999999"
        app:tl_indicator_corner_radius="1.5dp"
        app:tl_underline_height="2dp" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/slt_1"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>