<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp">

    <TextView
        android:id="@+id/tv_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:text="订单号：6255727182799809"
        android:textColor="#666666"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_refund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="退货"
        android:textColor="#FF6E6C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_orderId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_orderId" />

    <View
        android:id="@+id/view_picture_refund"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:background="#CCCCCC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_orderId" />

    <TextView
        android:id="@+id/tv_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="艺术品标题声声慢专场"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/view_picture_refund"
        app:layout_constraintTop_toBottomOf="@id/tv_orderId" />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="￥198.00"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_order_title" />

    <TextView
        android:id="@+id/tv_order_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="艺术品标题声声慢专场声..."
        android:textColor="#666666"
        android:textSize="6sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_title"
        app:layout_constraintTop_toBottomOf="@id/tv_order_title" />

    <TextView
        android:id="@+id/tv_order_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:text="规格：标准"
        android:textColor="#666666"
        android:textSize="6sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_child_title"
        app:layout_constraintTop_toBottomOf="@id/tv_order_child_title" />

    <TextView
        android:id="@+id/tv_no_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="请处理"
        android:textColor="#FF6E6C"
        android:textSize="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view_picture_refund" />

    <TextView
        android:id="@+id/tv_time_to_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="您需在26分30秒内处理"
        android:textColor="#FF6E6C"
        android:textSize="6sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_no_handle"
        app:layout_constraintTop_toBottomOf="@id/tv_no_handle" />
    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥198.00"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_size"
        app:layout_constraintTop_toBottomOf="@id/tv_order_size" />

    <TextView
        android:id="@+id/tv_to_refund_detail"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/tv_shape2"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:text="查看物流"
        android:textColor="#666666"
        android:textSize="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_to_refund_agree"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/tv_shape"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:text="同意退款"
        android:textColor="#FFFFFF"
        android:textSize="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F3F3"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>