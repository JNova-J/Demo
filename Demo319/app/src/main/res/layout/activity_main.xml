<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_main"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_indicator_corner_radius="2.5dp"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="20dp"
        android:orientation="vertical"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#D85353"
        app:tl_textSelectSize="20sp"
        app:tl_textUnSelectSize="15sp"
        app:tl_textUnselectColor="#DBEC35"
        app:tl_underline_color="#4B45EFF3"
        app:tl_underline_height="2dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stl_main" />
</androidx.constraintlayout.widget.ConstraintLayout>