<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sl_tab"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="vertical"
        app:tl_indicator_margin_bottom="5dp"
        app:tl_indicator_color="#FF6E6C"
        app:tl_indicator_height="3.5dp"
        app:tl_indicator_width="31dp"
        app:tl_indicator_corner_radius="1.8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tl_textSelectColor="#FF6E6C"
        app:tl_textSelectSize="18sp"
        app:tl_textUnSelectSize="15sp"
        app:tl_textUnselectColor="#999999"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sl_tab"
        app:layout_constraintBottom_toBottomOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>