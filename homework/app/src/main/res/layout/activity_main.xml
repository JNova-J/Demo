<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sl_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:tl_textUnSelectSize="15sp"
        app:tl_textUnselectColor="#D85353"
        app:tl_textSelectSize="20sp"
        app:tl_textSelectColor="#673AB7"
        app:tl_tab_space_equal="true"
        app:tl_indicator_width="10dp"
        app:tl_indicator_height="2dp"
        app:tl_underline_color="#4CAF50"
        app:tl_underline_height="1dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sl_main"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>